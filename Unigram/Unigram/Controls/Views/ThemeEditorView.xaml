<UserControl
    x:Class="Unigram.Controls.Views.ThemeEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Unigram.Controls.Views"
    xmlns:controls="using:Unigram.Controls"
    xmlns:color="using:FluentEditorShared.ColorPalette"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="1000"
    d:DesignWidth="304">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>

                    <ResourceDictionary.ThemeDictionaries>
                        <ResourceDictionary x:Key="Default">
                            <SolidColorBrush x:Key="AppBackgroundBrush" Color="#FF232323" />
                            <SolidColorBrush x:Key="AppContentBackgroundBrush" Color="#FF282828" />
                            <SolidColorBrush x:Key="ContentSpacerBrush" Color="#FF1F1F1F" />

                            <SolidColorBrush x:Key="ExpanderButtonStyleNormalForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStylePointerOverForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStylePressedForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleDisabledForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleCheckedForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleCheckedPointerOverForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleCheckedPressedForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleCheckedDisabledForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleIndeterminateForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleIndeterminatePointerOverForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleIndeterminatePressedForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleIndeterminateDisabledForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="Light">
                            <SolidColorBrush x:Key="AppBackgroundBrush" Color="#FFF1F1F1" />
                            <SolidColorBrush x:Key="AppContentBackgroundBrush" Color="#FFFFFFFF" />
                            <SolidColorBrush x:Key="ContentSpacerBrush" Color="#FFD4D4D4" />

                            <SolidColorBrush x:Key="ExpanderButtonStyleNormalForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStylePointerOverForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStylePressedForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleDisabledForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleCheckedForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleCheckedPointerOverForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleCheckedPressedForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleCheckedDisabledForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleIndeterminateForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleIndeterminatePointerOverForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleIndeterminatePressedForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleIndeterminateDisabledForegroundBrush" Color="{StaticResource SystemBaseHighColor}" />
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="HighContrast">
                            <SolidColorBrush x:Key="AppBackgroundBrush" Color="{ThemeResource SystemColorWindowColor}" />
                            <SolidColorBrush x:Key="AppContentBackgroundBrush" Color="{ThemeResource SystemColorWindowColor}" />
                            <SolidColorBrush x:Key="ContentSpacerBrush" Color="{ThemeResource SystemColorButtonTextColor}" />

                            <SolidColorBrush x:Key="ExpanderButtonStyleNormalForegroundBrush" Color="{ThemeResource SystemColorButtonTextColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStylePointerOverForegroundBrush" Color="{ThemeResource SystemColorButtonTextColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStylePressedForegroundBrush" Color="{ThemeResource SystemColorButtonTextColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleDisabledForegroundBrush" Color="{ThemeResource SystemColorButtonTextColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleCheckedForegroundBrush" Color="{ThemeResource SystemColorButtonTextColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleCheckedPointerOverForegroundBrush" Color="{ThemeResource SystemColorButtonTextColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleCheckedPressedForegroundBrush" Color="{ThemeResource SystemColorButtonTextColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleCheckedDisabledForegroundBrush" Color="{ThemeResource SystemColorButtonTextColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleIndeterminateForegroundBrush" Color="{ThemeResource SystemColorButtonTextColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleIndeterminatePointerOverForegroundBrush" Color="{ThemeResource SystemColorButtonTextColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleIndeterminatePressedForegroundBrush" Color="{ThemeResource SystemColorButtonTextColor}" />
                            <SolidColorBrush x:Key="ExpanderButtonStyleIndeterminateDisabledForegroundBrush" Color="{ThemeResource SystemColorButtonTextColor}" />
                        </ResourceDictionary>
                    </ResourceDictionary.ThemeDictionaries>

                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid
        x:Name="PropertyInspectorArea"
        Background="#F6F6F6"
        Grid.Column="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <controls:PageHeader x:Name="Header" Text="{CustomResource ThemePreview}"/>
        <ScrollViewer
            Grid.Row="2"
            Margin="10,0,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Auto">
            <StackPanel
                Margin="2,12,12,24"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Orientation="Vertical">
                <ComboBox
                    x:Uid="ControlPalettePresetCombo"
                    Header="Preset"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    DisplayMemberPath="Name"
                    ItemsSource="{x:Bind Path=ViewModel.Presets, Mode=OneWay}"
                    SelectedValue="{x:Bind Path=ViewModel.ActivePreset, Mode=TwoWay}" />
                <!--<Grid Margin="0,28,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Uid="ControlPaletteLoadButton"
                        Grid.Column="0"
                        Margin="0,0,6,0"
                        HorizontalAlignment="Stretch"
                        Click="{x:Bind Path=ViewModel.OnLoadDataRequested, Mode=OneWay}" />
                    <Button
                        x:Uid="ControlPaletteSaveButton"
                        Grid.Column="1"
                        Margin="6,0,0,0"
                        HorizontalAlignment="Stretch"
                        Click="{x:Bind Path=ViewModel.OnSaveDataRequested, Mode=OneWay}" />
                </Grid>-->
                <TextBlock
                    x:Uid="ControlPaletteRegionBlock"
                    Text="Region"
                    Margin="0,32,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontWeight="SemiBold"
                    LineHeight="20"
                    Style="{StaticResource BodyTextBlockStyle}" />
                <Grid Margin="0,8,0,12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="0"/>
                    </Grid.ColumnDefinitions>
                    <!--<TextBlock
                        x:Uid="ControlPaletteLightThemeBlock"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,8,12"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        LineHeight="16"
                        Style="{StaticResource CaptionTextBlockStyle}" />
                    <TextBlock
                        x:Uid="ControlPaletteDarkThemeBlock"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="8,0,0,12"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        LineHeight="16"
                        Style="{StaticResource CaptionTextBlockStyle}" />-->
                    <color:ColorPaletteEntryEditor
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,6,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        AutomationProperties.Name="{x:Bind Path=ViewModel.LightRegion.Title, Mode=OneWay}"
                        ColorPaletteEntry="{x:Bind Path=ViewModel.LightRegion, Mode=OneWay}"
                        Style="{StaticResource LargeColorPaletteEntryEditorStyle}" />
                    <color:ColorPaletteEntryEditor
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="6,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        AutomationProperties.Name="{x:Bind Path=ViewModel.DarkRegion.Title, Mode=OneWay}"
                        ColorPaletteEntry="{x:Bind Path=ViewModel.DarkRegion, Mode=OneWay}"
                        Style="{StaticResource LargeColorPaletteEntryEditorStyle}"
                        Visibility="Collapsed"/>
                </Grid>
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        x:Uid="ControlPaletteBaseBlock"
                        Text="Base"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontWeight="SemiBold"
                        LineHeight="20"
                        Style="{StaticResource BodyTextBlockStyle}" />
                    <ToggleButton
                        x:Name="BaseExpanderButton"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Style="{StaticResource ExpanderButtonStyle}">
                        <FontIcon FontSize="14" Glyph="&#xE70D;" />
                    </ToggleButton>
                </Grid>
                <Grid Margin="0,8,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="0"/>
                    </Grid.ColumnDefinitions>
                    <!--<TextBlock
                        x:Uid="ControlPaletteLightThemeBlock"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,8,12"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        LineHeight="16"
                        Style="{StaticResource CaptionTextBlockStyle}" />
                    <TextBlock
                        x:Uid="ControlPaletteDarkThemeBlock"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="8,0,0,12"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        LineHeight="16"
                        Style="{StaticResource CaptionTextBlockStyle}" />-->
                    <color:ColorPaletteEditor
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,6,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        ColorPalette="{x:Bind Path=ViewModel.LightBase, Mode=OneWay}"
                        IsExpanded="{x:Bind Path=BaseExpanderButton.IsChecked.Value, Mode=OneWay}" />
                    <color:ColorPaletteEditor
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="6,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        ColorPalette="{x:Bind Path=ViewModel.DarkBase, Mode=OneWay}"
                        IsExpanded="{x:Bind Path=BaseExpanderButton.IsChecked.Value, Mode=OneWay}"
                        Visibility="Collapsed"/>
                </Grid>
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        x:Uid="ControlPalettePrimaryBlock"
                        Text="Primary"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontWeight="SemiBold"
                        LineHeight="20"
                        Style="{StaticResource BodyTextBlockStyle}" />
                    <ToggleButton
                        x:Name="PrimaryExpanderButton"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Style="{StaticResource ExpanderButtonStyle}">
                        <FontIcon FontSize="14" Glyph="&#xE70D;" />
                    </ToggleButton>
                </Grid>
                <Grid Margin="0,8,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="0"/>
                    </Grid.ColumnDefinitions>
                    <!--<TextBlock
                        x:Uid="ControlPaletteLightThemeBlock"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,8,12"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        LineHeight="16"
                        Style="{StaticResource CaptionTextBlockStyle}" />
                    <TextBlock
                        x:Uid="ControlPaletteDarkThemeBlock"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="8,0,0,12"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        LineHeight="16"
                        Style="{StaticResource CaptionTextBlockStyle}" />-->
                    <color:ColorPaletteEditor
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,6,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        ColorPalette="{x:Bind Path=ViewModel.LightPrimary, Mode=OneWay}"
                        IsExpanded="{x:Bind Path=PrimaryExpanderButton.IsChecked.Value, Mode=OneWay}" />
                    <color:ColorPaletteEditor
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="6,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        ColorPalette="{x:Bind Path=ViewModel.DarkPrimary, Mode=OneWay}"
                        IsExpanded="{x:Bind Path=PrimaryExpanderButton.IsChecked.Value, Mode=OneWay}"
                        Visibility="Collapsed"/>
                </Grid>
                <StackPanel>
                    <TextBlock
                        Text="Message"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontWeight="SemiBold"
                        LineHeight="20"
                        Style="{StaticResource BodyTextBlockStyle}" />

                    <TextBlock
                        Text="Foreground"
                        Margin="0,12,8,8"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        LineHeight="16"
                        Style="{StaticResource CaptionTextBlockStyle}" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <color:ColorPaletteEntryEditor ColorPaletteEntry="{x:Bind ViewModel.MessageForeground, Mode=OneWay}" Margin="0,0,6,0" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0"/>
                        <color:ColorPaletteEntryEditor ColorPaletteEntry="{x:Bind ViewModel.MessageForegroundOut, Mode=OneWay}" Margin="6,0,0,0" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1"/>
                    </Grid>

                    <TextBlock
                        Text="Background"
                        Margin="0,12,8,8"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        LineHeight="16"
                        Style="{StaticResource CaptionTextBlockStyle}" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <color:ColorPaletteEntryEditor ColorPaletteEntry="{x:Bind ViewModel.MessageBackground, Mode=OneWay}" Margin="0,0,6,0" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0"/>
                        <color:ColorPaletteEntryEditor ColorPaletteEntry="{x:Bind ViewModel.MessageBackgroundOut, Mode=OneWay}" Margin="6,0,0,0" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1"/>
                    </Grid>

                    <TextBlock
                        Text="Subtle label"
                        Margin="0,12,8,8"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        LineHeight="16"
                        Style="{StaticResource CaptionTextBlockStyle}" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <color:ColorPaletteEntryEditor ColorPaletteEntry="{x:Bind ViewModel.MessageSubtleLabel, Mode=OneWay}" Margin="0,0,6,0" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0"/>
                        <color:ColorPaletteEntryEditor ColorPaletteEntry="{x:Bind ViewModel.MessageSubtleLabelOut, Mode=OneWay}" Margin="6,0,0,0" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1"/>
                    </Grid>

                    <TextBlock
                        Text="Subtle glyph"
                        Margin="0,12,8,8"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        LineHeight="16"
                        Style="{StaticResource CaptionTextBlockStyle}" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <color:ColorPaletteEntryEditor ColorPaletteEntry="{x:Bind ViewModel.MessageSubtleGlyph, Mode=OneWay}" Margin="0,0,6,0" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0"/>
                        <color:ColorPaletteEntryEditor ColorPaletteEntry="{x:Bind ViewModel.MessageSubtleGlyphOut, Mode=OneWay}" Margin="6,0,0,0" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1"/>
                    </Grid>

                    <TextBlock
                        Text="Subtle foreground"
                        Margin="0,12,8,8"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        LineHeight="16"
                        Style="{StaticResource CaptionTextBlockStyle}" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <color:ColorPaletteEntryEditor ColorPaletteEntry="{x:Bind ViewModel.MessageSubtleForeground, Mode=OneWay}" Margin="0,0,6,0" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0"/>
                        <color:ColorPaletteEntryEditor ColorPaletteEntry="{x:Bind ViewModel.MessageSubtleForegroundOut, Mode=OneWay}" Margin="6,0,0,0" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1"/>
                    </Grid>

                    <TextBlock
                        Text="Header foreground"
                        Margin="0,12,8,8"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        LineHeight="16"
                        Style="{StaticResource CaptionTextBlockStyle}" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <color:ColorPaletteEntryEditor ColorPaletteEntry="{x:Bind ViewModel.MessageHeaderForeground, Mode=OneWay}" Margin="0,0,6,0" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0"/>
                        <color:ColorPaletteEntryEditor ColorPaletteEntry="{x:Bind ViewModel.MessageHeaderForegroundOut, Mode=OneWay}" Margin="6,0,0,0" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1"/>
                    </Grid>

                    <TextBlock
                        Text="Header border"
                        Margin="0,12,8,8"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        LineHeight="16"
                        Style="{StaticResource CaptionTextBlockStyle}" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <color:ColorPaletteEntryEditor ColorPaletteEntry="{x:Bind ViewModel.MessageHeaderBorder, Mode=OneWay}" Margin="0,0,6,0" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0"/>
                        <color:ColorPaletteEntryEditor ColorPaletteEntry="{x:Bind ViewModel.MessageHeaderBorderOut, Mode=OneWay}" Margin="6,0,0,0" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1"/>
                    </Grid>

                    <TextBlock
                        Text="Media foreground"
                        Margin="0,12,8,8"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        LineHeight="16"
                        Style="{StaticResource CaptionTextBlockStyle}" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <color:ColorPaletteEntryEditor ColorPaletteEntry="{x:Bind ViewModel.MessageMediaForeground, Mode=OneWay}" Margin="0,0,6,0" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0"/>
                        <color:ColorPaletteEntryEditor ColorPaletteEntry="{x:Bind ViewModel.MessageMediaForegroundOut, Mode=OneWay}" Margin="6,0,0,0" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1"/>
                    </Grid>

                    <TextBlock
                        Text="Media background"
                        Margin="0,12,8,8"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        LineHeight="16"
                        Style="{StaticResource CaptionTextBlockStyle}" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <color:ColorPaletteEntryEditor ColorPaletteEntry="{x:Bind ViewModel.MessageMediaBackground, Mode=OneWay}" Margin="0,0,6,0" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0"/>
                        <color:ColorPaletteEntryEditor ColorPaletteEntry="{x:Bind ViewModel.MessageMediaBackgroundOut, Mode=OneWay}" Margin="6,0,0,0" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <Grid
            Grid.Row="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom">
            <Button
                x:Uid="ControlPaletteExportButton"
                Content="Export"
                HorizontalAlignment="Stretch"
                Height="{StaticResource TelegramToolBarHeight}"
                Click="{x:Bind Path=ViewModel.OnSaveDataRequested, Mode=OneWay}"
                Style="{StaticResource AccentButtonStyle}" />
        </Grid>
    </Grid>

</UserControl>
