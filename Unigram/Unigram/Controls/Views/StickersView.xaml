                                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Width" Value="{ThemeResource TelegramToolBarSmallHeight}"/>
                                        <Setter Property="Height" Value="{ThemeResource TelegramToolBarSmallHeight}"/>
                                        <Setter Property="MinWidth" Value="0"/>
                                        <Setter Property="MinHeight" Value="0"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListViewItem">
                                                    <Grid x:Name="RootGrid" ToolTipService.ToolTip="{CustomResource FavoriteStickers}">
                                                        <VisualStateManager.VisualStateGroups>
                                                            <VisualStateGroup>
                                                                <VisualState x:Name="Normal"/>
                                                                <VisualState x:Name="PointerOver">
                                                                    <Storyboard>
                                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="RootGrid">
                                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlBackgroundListLowBrush}"/>
                                                                        </ObjectAnimationUsingKeyFrames>
                                                                    </Storyboard>
                                                                </VisualState>
                                                                <VisualState x:Name="Pressed">
                                                                    <Storyboard>
                                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="RootGrid">
                                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlBackgroundListMediumBrush}"/>
                                                                        </ObjectAnimationUsingKeyFrames>
                                                                    </Storyboard>
                                                                </VisualState>
                                                                <VisualState x:Name="Selected">
                                                                    <VisualState.Setters>
                                                                        <Setter Target="UncheckedGlyph.Visibility" Value="Collapsed"/>
                                                                        <Setter Target="CheckedGlyph.Visibility" Value="Visible"/>
                                                                    </VisualState.Setters>
                                                                </VisualState>
                                                                <VisualState x:Name="PointerOverSelected">
                                                                    <VisualState.Setters>
                                                                        <Setter Target="UncheckedGlyph.Visibility" Value="Collapsed"/>
                                                                        <Setter Target="CheckedGlyph.Visibility" Value="Visible"/>
                                                                    </VisualState.Setters>
                                                                    <Storyboard>
                                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="RootGrid">
                                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlBackgroundListLowBrush}"/>
                                                                        </ObjectAnimationUsingKeyFrames>
                                                                    </Storyboard>
                                                                </VisualState>
                                                                <VisualState x:Name="PressedSelected">
                                                                    <VisualState.Setters>
                                                                        <Setter Target="UncheckedGlyph.Visibility" Value="Collapsed"/>
                                                                        <Setter Target="CheckedGlyph.Visibility" Value="Visible"/>
                                                                    </VisualState.Setters>
                                                                    <Storyboard>
                                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="RootGrid">
                                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlBackgroundListMediumBrush}"/>
                                                                        </ObjectAnimationUsingKeyFrames>
                                                                    </Storyboard>
                                                                </VisualState>
                                                            </VisualStateGroup>
                                                        </VisualStateManager.VisualStateGroups>
                                                        <FontIcon x:Name="UncheckedGlyph" Glyph="&#xE208;" Margin="0,0,0,2"/>
                                                        <FontIcon x:Name="CheckedGlyph" Visibility="Collapsed" Glyph="&#xE0B4;" Margin="0,0,0,2" Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </selectors:StickerSetStyleSelector.FavoriteStyle>
                                <selectors:StickerSetStyleSelector.ItemStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Width" Value="{ThemeResource TelegramToolBarSmallHeight}"/>
                                        <Setter Property="Height" Value="{ThemeResource TelegramToolBarSmallHeight}"/>
                                        <Setter Property="MinWidth" Value="0"/>
                                        <Setter Property="MinHeight" Value="0"/>
                                    </Style>
                                </selectors:StickerSetStyleSelector.ItemStyle>
                            </selectors:StickerSetStyleSelector>
                        </ListView.ItemContainerStyleSelector>
                        <ListView.ItemTemplateSelector>
                            <selectors:StickerSetTemplateSelector>
                                <selectors:StickerSetTemplateSelector.ItemTemplate>
                                    <DataTemplate x:DataType="viewModels:StickerSetViewModel">
                                        <!--<Image Margin="6" Source="{x:Bind Cover, Converter={StaticResource DefaultPhotoConverter}, ConverterParameter=thumbnail}" ToolTipService.ToolTip="{x:Bind Title}"/>-->
                                        <Image Margin="6" ToolTipService.ToolTip="{x:Bind Title}"/>
                                    </DataTemplate>
                                </selectors:StickerSetTemplateSelector.ItemTemplate>
                                <!--<selectors:StickerSetTemplateSelector.GroupTemplate>
                                    <DataTemplate x:DataType="viewModels:TLChannelStickerSet">
                                        <controls:ProfilePicture Margin="6" Source="{x:Bind With, Converter={StaticResource DefaultPhotoConverter}, ConverterParameter=thumbnail}" ToolTipService.ToolTip="{x:Bind Set.Title}" IsHitTestVisible="False"/>
                                    </DataTemplate>
                                </selectors:StickerSetTemplateSelector.GroupTemplate>-->
                                <selectors:StickerSetTemplateSelector.RecentsTemplate>
                                    <DataTemplate x:DataType="viewModels:StickerSetViewModel">
                                        <Border ToolTipService.ToolTip="{x:Bind Title}" Background="Transparent">
                                            <FontIcon Glyph="&#xE121;" Margin="0,0,0,2"/>
                                        </Border>
                                    </DataTemplate>
                                </selectors:StickerSetTemplateSelector.RecentsTemplate>
                                <selectors:StickerSetTemplateSelector.FavedTemplate>
                                    <DataTemplate x:DataType="viewModels:StickerSetViewModel">
                                        <Border ToolTipService.ToolTip="{x:Bind Title}" Background="Transparent">
                                            <FontIcon Glyph="&#xE208;" Margin="0,0,0,2"/>
                                        </Border>
                                    </DataTemplate>
                                </selectors:StickerSetTemplateSelector.FavedTemplate>
                            </selectors:StickerSetTemplateSelector>
                        </ListView.ItemTemplateSelector>
                        <ListView.Header>
                            <StackPanel Orientation="Horizontal">
                                <controls:GlyphButton Click="Emojis_Click" Width="{ThemeResource TelegramToolBarSmallHeight}" Height="{ThemeResource TelegramToolBarSmallHeight}" Glyph="&#xE76E;"/>
                                <controls:PivotRadioButton Visibility="{x:Bind ViewModel.Stickers.SavedGifs.Count, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" SelectedValue="{x:Bind Pivot.SelectedIndex, Mode=TwoWay}" Index="0" Glyph="&#xE608;" CheckedGlyph="&#xE913;" Width="{ThemeResource TelegramToolBarSmallHeight}" Height="{ThemeResource TelegramToolBarSmallHeight}" FontFamily="{StaticResource TelegramThemeFontFamily}" Style="{StaticResource ModernPivotRadioButtonStyle}"/>
                                <controls:PivotRadioButton Visibility="{x:Bind ViewModel.Stickers.FeaturedUnreadCount, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" SelectedValue="{x:Bind Pivot.SelectedIndex, Mode=TwoWay}" Index="1" Glyph="&#xE60D;" Width="{ThemeResource TelegramToolBarSmallHeight}" Height="{ThemeResource TelegramToolBarSmallHeight}" FontFamily="{StaticResource TelegramThemeFontFamily}" HorizontalContentAlignment="Right" VerticalContentAlignment="Top" Padding="4">
                                    <Grid Background="{ThemeResource TelegramDialogUnreadBadgeBrush}"
                                            CornerRadius="10"
                                            MinWidth="20"
                                            Height="20">
                                        <TextBlock Text="{x:Bind ViewModel.Stickers.FeaturedUnreadCount, Mode=OneWay}"
                                                    Style="{ThemeResource CaptionTextBlockStyle}"
                                                    Foreground="{ThemeResource TelegramDialogUnreadLabelBrush}"
                                                    TextAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    TextLineBounds="TrimToBaseline,TrimToCapHeight"
                                                    Margin="5,0,5,0"/>
                                    </Grid>
                                </controls:PivotRadioButton>
                                <controls:PivotRadioButton SelectedValue="{x:Bind Pivot.SelectedIndex, Mode=TwoWay}" Index="2" Glyph="&#xE121;" Visibility="Collapsed"/>
                            </StackPanel>
                        </ListView.Header>
                        <ListView.Footer>
                            <StackPanel Orientation="Horizontal">
                                <controls:PivotRadioButton Visibility="{x:Bind ViewModel.Stickers.FeaturedUnreadCount, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=invert}" SelectedValue="{x:Bind Pivot.SelectedIndex, Mode=TwoWay}" Index="1" Glyph="&#xE60D;" Width="{ThemeResource TelegramToolBarSmallHeight}" Height="{ThemeResource TelegramToolBarSmallHeight}" FontFamily="{StaticResource TelegramThemeFontFamily}"/>
                                <controls:GlyphButton Click="Settings_Click" Width="{ThemeResource TelegramToolBarSmallHeight}" Height="{ThemeResource TelegramToolBarSmallHeight}" Glyph="&#xE115;"/>
                            </StackPanel>
                        </ListView.Footer>
                        <ListView.ItemContainerTransitions>
                            <TransitionCollection/>
                        </ListView.ItemContainerTransitions>
                    </ListView>

                    <Border BorderThickness="0,1,0,0" BorderBrush="{ThemeResource TelegramSeparatorBrush}" VerticalAlignment="Bottom" IsHitTestVisible="False" Grid.Row="2"/>
                </Grid>
            </Grid>
            <local:EmojisView x:Name="Emojis" x:DeferLoadStrategy="Lazy" Switch="Emojis_Switch" ItemClick="Emojis_ItemClick" Grid.RowSpan="3"/>
        </Grid>
    </Grid>
</UserControl>
