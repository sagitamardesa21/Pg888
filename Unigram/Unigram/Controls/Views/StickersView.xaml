                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </GroupStyle.HeaderContainerStyle>
                            </GroupStyle>
                        </GridView.GroupStyle>
                        <!--<GridView.ItemTemplate>
                             <DataTemplate x:DataType="tl:TLDocument">
                             <Image x:Phase="3" Margin="2" Source="{x:Bind Converter={StaticResource DefaultPhotoConverter}, ConverterParameter=thumbnail}"/>
                             </DataTemplate>
                             </GridView.ItemTemplate>-->
                        <GridView.Footer>
                            <Border Height="12"/>
                        </GridView.Footer>
                        <GridView.ItemContainerStyle>
                            <Style TargetType="GridViewItem">
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                            </Style>
                        </GridView.ItemContainerStyle>
                        <GridView.ItemContainerTransitions>
                            <TransitionCollection/>
                        </GridView.ItemContainerTransitions>
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid Orientation="Horizontal" GroupPadding="0,0,0,20" AreStickyGroupHeadersEnabled="False"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                    </controls:ZoomableGridView>
                </PivotItem>

                <Pivot x:Name="Pivot" Style="{StaticResource HeaderlessPivotStyle}" SelectionChanged="Pivot_SelectionChanged" Grid.Row="1">
                    <PivotItem>
                        <local:EmojisView x:Name="Emojis" x:DeferLoadStrategy="Lazy" ItemClick="Emojis_ItemClick" Grid.RowSpan="3" d:IsHidden="True"/>
                    </PivotItem>
                    <PivotItem>
                        <Grid>
                            <Grid x:Name="AnimationsRoot">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Border>
                                    <TextBox x:Name="FieldAnimations" PlaceholderText="{CustomResource SearchGifsTitle}" TextChanged="FieldAnimations_TextChanged" Margin="12,8" Grid.Row="1"/>
                                </Border>

                                <ListView x:Name="GifsView"
                                          ItemsSource="{x:Bind ViewModel.Stickers.Animations, Mode=OneWay}"
                                          SelectionMode="None"
                                          ContainerContentChanging="Animations_ContainerContentChanging"
                                          Padding="2"
                                          Grid.Row="1">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <controls:MosaicRow HorizontalAlignment="Stretch" ItemContextRequested="Animation_ContextRequested"/>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemContainerTransitions>
                                        <TransitionCollection/>
                                    </ListView.ItemContainerTransitions>
                                </ListView>
                            </Grid>

                            <TextBlock x:Name="AnimationsPermission"
                                       VerticalAlignment="Center"
                                       TextAlignment="Center"
                                       Margin="12"
                                       Foreground="{ThemeResource ButtonForegroundDisabled}"
                                       Style="{StaticResource BodyTextBlockStyle}"/>
                        </Grid>
                    </PivotItem>
                    <PivotItem>
                        <Grid>
                            <Grid x:Name="StickersRoot">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="1">
                                    <TextBox x:Name="FieldStickers" PlaceholderText="{CustomResource SearchStickersHint}" TextChanged="FieldStickers_TextChanged" Margin="12,8"/>
                                </Border>

                                <controls:ZoomableGridView
                                    x:Name="Stickers"
                                    ItemsSource="{x:Bind StickersSource.View, Mode=OneWay}"
                                    common:FluidGridView.OrientationOnly="False"
                                    ChoosingGroupHeaderContainer="Stickers_ChoosingGroupHeaderContainer"
                                    ChoosingItemContainer="Stickers_ChoosingItemContainer"
                                    ContainerContentChanging="Stickers_ContainerContentChanging"
                                    IsItemClickEnabled="True"
                                    SelectionMode="None"
                                    ItemClick="Stickers_ItemClick"
                                    Loaded="Stickers_Loaded"
                                    Padding="2,0"
                                    Grid.Row="2">
                                    <common:FluidGridView.Triggers>
                                        <common:FluidGridViewTrigger RowsOrColumns="5"/>
                                    </common:FluidGridView.Triggers>
                                    <GridView.GroupStyle>
                                        <GroupStyle>
                                            <!--<GroupStyle.HeaderTemplateSelector>
                                                 <selectors:StickerSetTemplateSelector>
                                                 <selectors:StickerSetTemplateSelector.ItemTemplate>
                                                 <DataTemplate x:DataType="messages:TLMessagesStickerSet">
                                                 <TextBlock Text="{x:Bind Set.Title}" Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}" Style="{StaticResource CaptionTextBlockStyle}"/>
                                                 </DataTemplate>
                                                 </selectors:StickerSetTemplateSelector.ItemTemplate>
                                                 <selectors:StickerSetTemplateSelector.GroupTemplate>
                                                 <DataTemplate x:DataType="viewModels:TLChannelStickerSet">
                                                 <Grid>
                                                 <Grid.ColumnDefinitions>
                                                 <ColumnDefinition/>
                                                 <ColumnDefinition Width="Auto"/>
                                                 </Grid.ColumnDefinitions>
                                                 <TextBlock Text="{x:Bind Set.Title}" Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}" Style="{StaticResource CaptionTextBlockStyle}"/>
                                             
                                                 <controls:ChannelStickersButton Click="GroupStickers_Click" StickerSet="{x:Bind}" Glyph="&#xE115;" FontSize="16" Height="32" Margin="0,-8,-12,-8" Grid.Column="1"/>
                                                 </Grid>
                                                 </DataTemplate>
                                                 </selectors:StickerSetTemplateSelector.GroupTemplate>
                                                 </selectors:StickerSetTemplateSelector>
                                                 </GroupStyle.HeaderTemplateSelector>-->
                                            <GroupStyle.HeaderTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Title}" Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}" Style="{StaticResource CaptionTextBlockStyle}"/>
                                                </DataTemplate>
                                            </GroupStyle.HeaderTemplate>
                                            <GroupStyle.HeaderContainerStyle>
                                                <Style TargetType="GridViewHeaderItem">
                                                    <Setter Property="Background" Value="Trasparent" />
                                                    <Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}" />
                                                    <Setter Property="FontSize" Value="{ThemeResource ListViewHeaderItemThemeFontSize}" />
                                                    <Setter Property="Margin" Value="0,0,0,0"/>
                                                    <Setter Property="Padding" Value="10,8,10,8"/>
                                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                    <Setter Property="VerticalContentAlignment" Value="Top" />
                                                    <Setter Property="MinHeight" Value="32"/>
                                                    <Setter Property="Height" Value="32"/>
                                                    <Setter Property="UseSystemFocusVisuals" Value="True" />
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="GridViewHeaderItem">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                                    <ContentPresenter x:Name="ContentPresenter"
                                                                                      Margin="{TemplateBinding Padding}"
                                                                                      Content="{TemplateBinding Content}"
                                                                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                                                                      ContentTransitions="{TemplateBinding ContentTransitions}"
                                                                                      HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                                      VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </GroupStyle.HeaderContainerStyle>
                                        </GroupStyle>
                                    </GridView.GroupStyle>
                                    <GridView.ItemTemplate>
                                        <DataTemplate>
                                            <Image Margin="2"/>
                                        </DataTemplate>
                                    </GridView.ItemTemplate>
                                    <!--<GridView.Header>
                                         <Border>
                                         <TextBox PlaceholderText="{CustomResource SearchStickersHint}" Margin="10,8,10,0"/>
                                         </Border>
                                         </GridView.Header>-->
                                    <GridView.Footer>
                                        <Border Height="12"/>
                                    </GridView.Footer>
                                    <GridView.ItemContainerStyle>
                                        <Style TargetType="GridViewItem">
                                            <Setter Property="Margin" Value="0"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                        </Style>
                                    </GridView.ItemContainerStyle>
                                    <GridView.ItemContainerTransitions>
                                        <TransitionCollection/>
                                    </GridView.ItemContainerTransitions>
                                    <GridView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <ItemsWrapGrid Orientation="Horizontal" AreStickyGroupHeadersEnabled="False" Loaded="OnLoaded"/>
                                        </ItemsPanelTemplate>
                                    </GridView.ItemsPanel>
                                </controls:ZoomableGridView>
                                <Grid x:Name="ToolbarContainer">
                                    <Border x:Name="Separator"/>
                                    <!--
                                         Background="{ThemeResource PageSubHeaderBackgroundBrush}"-->
                                    <ListView x:Name="Toolbar"
                                              ItemsSource="{x:Bind ViewModel.Stickers.SavedStickers}"
                                              Height="{ThemeResource AppBarThemeCompactHeight}"
                                              Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                                              IsItemClickEnabled="True"
                                              ItemClick="Toolbar_ItemClick"
                                              SelectionChanged="Toolbar_SelectionChanged"
                                              ContainerContentChanging="Toolbar_ContainerContentChanging"
                                              ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                              ScrollViewer.HorizontalScrollMode="Auto"
                                              ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                              ScrollViewer.VerticalScrollMode="Disabled"
                                              Grid.Row="0">
                                        <ListView.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <ItemsStackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ListView.ItemsPanel>
                                        <ListView.ItemContainerStyleSelector>
                                            <selectors:StickerSetStyleSelector>
                                                <selectors:StickerSetStyleSelector.RecentStyle>
                                                    <Style TargetType="ListViewItem">
                                                        <Setter Property="Margin" Value="0"/>
                                                        <Setter Property="Padding" Value="0"/>
                                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                                        <Setter Property="Width" Value="{ThemeResource AppBarThemeCompactHeight}"/>
                                                        <Setter Property="Height" Value="{ThemeResource AppBarThemeCompactHeight}"/>
                                                        <Setter Property="MinWidth" Value="0"/>
                                                        <Setter Property="MinHeight" Value="0"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ListViewItem">
                                                                    <Grid x:Name="RootGrid" ToolTipService.ToolTip="{CustomResource RecentStickers}">
                                                                        <VisualStateManager.VisualStateGroups>
                                                                            <VisualStateGroup>
                                                                                <VisualState x:Name="Normal"/>
                                                                                <VisualState x:Name="PointerOver">
                                                                                    <Storyboard>
                                                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="RootGrid">
                                                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlBackgroundListLowBrush}"/>
                                                                                        </ObjectAnimationUsingKeyFrames>
                                                                                    </Storyboard>
                                                                                </VisualState>
                                                                                <VisualState x:Name="Pressed">
                                                                                    <Storyboard>
                                                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="RootGrid">
                                                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlBackgroundListMediumBrush}"/>
                                                                                        </ObjectAnimationUsingKeyFrames>
                                                                                    </Storyboard>
                                                                                </VisualState>
                                                                                <VisualState x:Name="Selected">
                                                                                    <VisualState.Setters>
                                                                                        <Setter Target="UncheckedGlyph.Visibility" Value="Collapsed"/>
                                                                                        <Setter Target="CheckedGlyph.Visibility" Value="Visible"/>
                                                                                    </VisualState.Setters>
                                                                                </VisualState>
                                                                                <VisualState x:Name="PointerOverSelected">
                                                                                    <VisualState.Setters>
                                                                                        <Setter Target="UncheckedGlyph.Visibility" Value="Collapsed"/>
                                                                                        <Setter Target="CheckedGlyph.Visibility" Value="Visible"/>
                                                                                    </VisualState.Setters>
                                                                                    <Storyboard>
                                                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="RootGrid">
                                                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlBackgroundListLowBrush}"/>
                                                                                        </ObjectAnimationUsingKeyFrames>
                                                                                    </Storyboard>
                                                                                </VisualState>
                                                                                <VisualState x:Name="PressedSelected">
                                                                                    <VisualState.Setters>
                                                                                        <Setter Target="UncheckedGlyph.Visibility" Value="Collapsed"/>
                                                                                        <Setter Target="CheckedGlyph.Visibility" Value="Visible"/>
                                                                                    </VisualState.Setters>
                                                                                    <Storyboard>
                                                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="RootGrid">
                                                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlBackgroundListMediumBrush}"/>
                                                                                        </ObjectAnimationUsingKeyFrames>
                                                                                    </Storyboard>
                                                                                </VisualState>
                                                                            </VisualStateGroup>
                                                                        </VisualStateManager.VisualStateGroups>
                                                                        <FontIcon x:Name="UncheckedGlyph" Glyph="&#xE911;" FontFamily="{StaticResource TelegramThemeFontFamily}"/>
                                                                        <FontIcon x:Name="CheckedGlyph" Visibility="Collapsed" Glyph="&#xE912;" FontFamily="{StaticResource TelegramThemeFontFamily}" Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                                                                    </Grid>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </selectors:StickerSetStyleSelector.RecentStyle>
                                                <selectors:StickerSetStyleSelector.FavoriteStyle>
                                                    <Style TargetType="ListViewItem">
                                                        <Setter Property="Margin" Value="0"/>
                                                        <Setter Property="Padding" Value="0"/>
                                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                                        <Setter Property="Width" Value="{ThemeResource AppBarThemeCompactHeight}"/>
                                                        <Setter Property="Height" Value="{ThemeResource AppBarThemeCompactHeight}"/>
                                                        <Setter Property="MinWidth" Value="0"/>
                                                        <Setter Property="MinHeight" Value="0"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ListViewItem">
                                                                    <Grid x:Name="RootGrid" ToolTipService.ToolTip="{CustomResource FavoriteStickers}">
                                                                        <VisualStateManager.VisualStateGroups>
                                                                            <VisualStateGroup>
                                                                                <VisualState x:Name="Normal"/>
                                                                                <VisualState x:Name="PointerOver">
                                                                                    <Storyboard>
                                                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="RootGrid">
                                                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlBackgroundListLowBrush}"/>
                                                                                        </ObjectAnimationUsingKeyFrames>
                                                                                    </Storyboard>
                                                                                </VisualState>
                                                                                <VisualState x:Name="Pressed">
                                                                                    <Storyboard>
                                                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="RootGrid">
                                                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlBackgroundListMediumBrush}"/>
                                                                                        </ObjectAnimationUsingKeyFrames>
                                                                                    </Storyboard>
                                                                                </VisualState>
                                                                                <VisualState x:Name="Selected">
                                                                                    <VisualState.Setters>
                                                                                        <Setter Target="UncheckedGlyph.Visibility" Value="Collapsed"/>
                                                                                        <Setter Target="CheckedGlyph.Visibility" Value="Visible"/>
                                                                                    </VisualState.Setters>
                                                                                </VisualState>
                                                                                <VisualState x:Name="PointerOverSelected">
