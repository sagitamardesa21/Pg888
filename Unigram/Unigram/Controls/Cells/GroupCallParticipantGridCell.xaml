<HyperlinkButton
    x:Class="Unigram.Controls.Cells.GroupCallParticipantGridCell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Unigram.Controls.Cells"
    xmlns:common="using:Unigram.Common"
    xmlns:controls="using:Unigram.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xaml="using:Microsoft.Graphics.Canvas.UI.Xaml"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Margin="2"
    CornerRadius="8"
    HorizontalContentAlignment="Stretch"
    VerticalContentAlignment="Stretch"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    Padding="0">

    <controls:AspectView x:Name="LayoutRoot" Background="{ThemeResource PageHeaderBorderBrush}" CornerRadius="8">
        <Border x:Name="CanvasRoot" CornerRadius="8">
            <!--<xaml:CanvasControl/>-->
        </Border>

        <Grid x:Name="Header" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="BackRoot" Margin="4,4,0,0">
                <Border
                    CornerRadius="20"
                    Background="#77000000"
                    Width="32"
                    Height="32"/>
                <controls:GlyphButton
                    x:Name="Back"
                    Click="Back_Click"
                    Glyph="&#xE72B;"
                    CornerRadius="16"
                    Width="40"
                    Height="40"/>
            </Grid>

            <Grid x:Name="ModeRoot" Margin="0,4,0,0" Grid.Column="2">
                <Border
                    CornerRadius="20"
                    Background="#77000000"
                    Width="32"
                    Height="32"/>
                <controls:AnimatedGlyphToggleButton
                    x:Name="Mode"
                    Click="Mode_Click"
                    Glyph="&#xE968;"
                    CheckedGlyph="&#xE967;"
                    CornerRadius="16"
                    Width="40"
                    Height="40"
                    IsOneWay="False"/>
            </Grid>

            <Grid x:Name="PinRoot" Margin="0,4,4,0" Grid.Column="3">
                <Border
                    CornerRadius="20"
                    Background="#77000000"
                    Width="32"
                    Height="32"/>
                <controls:AnimatedGlyphToggleButton
                    x:Name="Pin"
                    Click="Pin_Click"
                    Glyph="&#xE840;"
                    CheckedGlyph="&#xE77A;"
                    CornerRadius="16"
                    Width="40"
                    Height="40"
                    IsOneWay="False"/>
            </Grid>
        </Grid>

        <StackPanel x:Name="PausedRoot" VerticalAlignment="Center" Visibility="Collapsed">
            <TextBlock
                Text="&#xE769;"
                TextAlignment="Center"
                FontFamily="{StaticResource SymbolThemeFontFamily}"
                FontSize="24"/>
            <TextBlock
                Text="Video on Paused"
                Style="{StaticResource BaseTextBlockStyle}"
                TextAlignment="Center"/>
        </StackPanel>

        <Grid x:Name="Info" VerticalAlignment="Bottom" Opacity="0.8" Padding="12,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Border CornerRadius="0,0,8,8" 
                    VerticalAlignment="Stretch"
                    Margin="-12,-6"
                    Grid.ColumnSpan="3">
                <Rectangle x:Name="Scrim">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <common:Scrim.Gradient>
                                <common:CubicBezierGradient
                                    TopColor="#00000000"
                                    BottomColor="#99000000"/>
                            </common:Scrim.Gradient>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </Border>

            <TextBlock
                x:Name="Glyph"
                VerticalAlignment="Center"
                FontFamily="{StaticResource SymbolThemeFontFamily}"
                Foreground="#FFFFFF"
                FontSize="20"
                Margin="0,0,8,0"/>

            <TextBlock
                x:Name="Title"
                FontFamily="{StaticResource EmojiThemeFontFamily}"
                Foreground="#FFFFFF"
                TextWrapping="NoWrap"
                TextTrimming="CharacterEllipsis"
                VerticalAlignment="Center"
                Grid.Column="1"/>

            <TextBlock
                x:Name="ScreenSharing"
                VerticalAlignment="Center"
                FontFamily="{StaticResource SymbolThemeFontFamily}"
                Foreground="#FFFFFF"
                FontSize="20"
                Grid.Column="2"/>
        </Grid>

        <Border
            x:Name="Speaking"
            BorderThickness="2"
            CornerRadius="8"/>
    </controls:AspectView>
</HyperlinkButton>
