<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Unigram.Controls.Messages.Content"
    xmlns:controls="using:Unigram.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="200"
    d:DesignWidth="200">

    <Style TargetType="local:VideoNoteContent">
        <Setter Property="MinWidth" Value="{ThemeResource TelegramMediaMinWidth}"/>
        <Setter Property="MinHeight" Value="{ThemeResource TelegramMediaMinHeight}"/>
        <Setter Property="MaxWidth" Value="{ThemeResource TelegramMediaMaxWidth}"/>
        <Setter Property="MaxHeight" Value="{ThemeResource TelegramMediaMaxHeight}"/>
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:VideoNoteContent">
                    <controls:AspectView x:Name="LayoutRoot">
                        <Ellipse x:Name="Holder">
                            <Ellipse.Fill>
                                <ImageBrush x:Name="Texture" Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>

                        <controls:FileButton x:Name="Button" Style="{StaticResource ImmersiveFileButtonStyle}"/>

                        <Border x:Name="Element" CornerRadius="100">
                            <controls:AnimationView
                                x:Name="Player"
                                AutoPlay="False"
                                IsHitTestVisible="False"/>
                        </Border>

                        <Border x:Name="Overlay" IsHitTestVisible="False" Background="{ThemeResource MessageServiceBackgroundBrush}" CornerRadius="{ThemeResource MessageOverlayCornerRadius}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Padding="8,4,8,4" Margin="4">
                            <TextBlock x:Name="Subtitle" Style="{StaticResource CaptionTextBlockStyle}" Foreground="White" TextAlignment="Right"/>
                        </Border>
                    </controls:AspectView>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>