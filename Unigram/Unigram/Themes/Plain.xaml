<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Unigram">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
            <StaticResource x:Key="NavigationViewChromePaneBackground" ResourceKey="SystemChromeMediumHighColor" />
            <StaticResource x:Key="NavigationViewAccentPaneBackground" ResourceKey="SystemControlForegroundAccentBrush" />

            <StaticResource x:Key="UndoViewBackgroundBrush" ResourceKey="PageHeaderBackgroundBrush"/>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Light">
            <StaticResource x:Key="NavigationViewChromePaneBackground" ResourceKey="SystemChromeMediumHighColor" />
            <StaticResource x:Key="NavigationViewAccentPaneBackground" ResourceKey="SystemControlForegroundAccentBrush" />

            <StaticResource x:Key="UndoViewBackgroundBrush" ResourceKey="PageHeaderBackgroundBrush"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
