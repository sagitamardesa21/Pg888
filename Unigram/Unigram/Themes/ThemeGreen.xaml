<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Unigram.Themes">
    
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Dark">
            <Color x:Key="MessageForegroundColor">#F5F5F5</Color>
            <Color x:Key="MessageForegroundOutColor">#E4ECF2</Color>

            <Color x:Key="MessageForegroundLinkColor">#70BAF5</Color>
            <Color x:Key="MessageForegroundLinkOutColor">#83CAFF</Color>

            <Color x:Key="MessageBackgroundColor">#182533</Color>
            <Color x:Key="MessageBackgroundOutColor">#2B5278</Color>

            <Color x:Key="MessageSubtleLabelColor">#6D7F8F</Color>
            <Color x:Key="MessageSubtleLabelOutColor">#7DA8D3</Color>

            <Color x:Key="MessageSubtleGlyphColor">#6D7F8F</Color>
            <Color x:Key="MessageSubtleGlyphOutColor">#72BCFD</Color>

            <Color x:Key="MessageSubtleForegroundColor">#6D7F8F</Color>
            <Color x:Key="MessageSubtleForegroundOutColor">#7DA8D3</Color>

            <Color x:Key="MessageHeaderForegroundColor">#71BAFA</Color>
            <Color x:Key="MessageHeaderForegroundOutColor">#90CAFF</Color>

            <Color x:Key="MessageHeaderBorderColor">#429BDB</Color>
            <Color x:Key="MessageHeaderBorderOutColor">#65B9F4</Color>

            <Color x:Key="MessageMediaForegroundColor">#FFFFFF</Color>
            <Color x:Key="MessageMediaForegroundOutColor">#FFFFFF</Color>

            <Color x:Key="MessageMediaBackgroundColor">#3F96D0</Color>
            <Color x:Key="MessageMediaBackgroundOutColor">#4C9CE2</Color>

            <Color x:Key="MessageHyperlinkForegroundColor">#70BAF5</Color>
            <Color x:Key="MessageHyperlinkForegroundOutColor">#83CAFF</Color>

            <Color x:Key="MessageOverlayBackgroundColor">#54000000</Color>
            <Color x:Key="MessageOverlayBackgroundOutColor">#54000000</Color>

            <Color x:Key="MessageCallForegroundColor">#49A2F0</Color>
            <Color x:Key="MessageCallForegroundOutColor">#49A2F0</Color>

            <Color x:Key="MessageCallMissedForegroundColor">#ED5050</Color>
            <Color x:Key="MessageCallMissedForegroundOutColor">#ED5050</Color>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Light">
            <Color x:Key="MessageForegroundColor">#000000</Color>
            <Color x:Key="MessageForegroundOutColor">#000000</Color>

            <Color x:Key="MessageForegroundLinkColor">#168ACD</Color>
            <Color x:Key="MessageForegroundLinkOutColor">#168ACD</Color>

            <Color x:Key="MessageBackgroundColor">#FFFFFF</Color>
            <Color x:Key="MessageBackgroundOutColor">#F0FDDF</Color>

            <Color x:Key="MessageSubtleLabelColor">#A1ADB6</Color>
            <Color x:Key="MessageSubtleLabelOutColor">#6DC264</Color>

            <Color x:Key="MessageSubtleGlyphColor">#A1ADB6</Color>
            <Color x:Key="MessageSubtleGlyphOutColor">#5DC452</Color>

            <Color x:Key="MessageSubtleForegroundColor">#A1ADB6</Color>
            <Color x:Key="MessageSubtleForegroundOutColor">#6DC264</Color>

            <Color x:Key="MessageHeaderForegroundColor">#158DCD</Color>
            <Color x:Key="MessageHeaderForegroundOutColor">#3A8E26</Color>

            <Color x:Key="MessageHeaderBorderColor">#37A4DE</Color>
            <Color x:Key="MessageHeaderBorderOutColor">#5DC452</Color>

            <Color x:Key="MessageMediaForegroundColor">#FFFFFF</Color>
            <Color x:Key="MessageMediaForegroundOutColor">#F0FDDF</Color>

            <Color x:Key="MessageMediaBackgroundColor">#40A7E3</Color>
            <Color x:Key="MessageMediaBackgroundOutColor">#78C67F</Color>

            <Color x:Key="MessageHyperlinkForegroundColor">#158DCD</Color>
            <Color x:Key="MessageHyperlinkForegroundOutColor">#158DCD</Color>

            <Color x:Key="MessageOverlayBackgroundColor">#54000000</Color>
            <Color x:Key="MessageOverlayBackgroundOutColor">#54000000</Color>

            <Color x:Key="MessageCallForegroundColor">#2AB32A</Color>
            <Color x:Key="MessageCallForegroundOutColor">#2AB32A</Color>

            <Color x:Key="MessageCallMissedForegroundColor">#DD5849</Color>
            <Color x:Key="MessageCallMissedForegroundOutColor">#DD5849</Color>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <SolidColorBrush x:Key="MessageForegroundBrush" Color="{ThemeResource MessageForegroundColor}" />
    <SolidColorBrush x:Key="MessageForegroundLinkBrush" Color="{ThemeResource MessageForegroundLinkColor}" />
    <SolidColorBrush x:Key="MessageBackgroundBrush" Color="{ThemeResource MessageBackgroundColor}" />
    <SolidColorBrush x:Key="MessageSubtleLabelBrush" Color="{ThemeResource MessageSubtleLabelColor}" />
    <SolidColorBrush x:Key="MessageSubtleGlyphBrush" Color="{ThemeResource MessageSubtleGlyphColor}" />
    <SolidColorBrush x:Key="MessageSubtleForegroundBrush" Color="{ThemeResource MessageSubtleForegroundColor}" />
    <SolidColorBrush x:Key="MessageHeaderForegroundBrush" Color="{ThemeResource MessageHeaderForegroundColor}" />
    <SolidColorBrush x:Key="MessageHeaderBorderBrush" Color="{ThemeResource MessageHeaderBorderColor}" />
    <SolidColorBrush x:Key="MessageMediaForegroundBrush" Color="{ThemeResource MessageMediaForegroundColor}" />
    <SolidColorBrush x:Key="MessageMediaBackgroundBrush" Color="{ThemeResource MessageMediaBackgroundColor}" />
    <SolidColorBrush x:Key="MessageHyperlinkForegroundBrush" Color="{ThemeResource MessageHyperlinkForegroundColor}" />
    <SolidColorBrush x:Key="MessageOverlayBackgroundBrush" Color="{ThemeResource MessageOverlayBackgroundColor}" />
    <SolidColorBrush x:Key="MessageCallForegroundBrush" Color="{ThemeResource MessageCallForegroundColor}" />
    <SolidColorBrush x:Key="MessageCallMissedForegroundBrush" Color="{ThemeResource MessageCallMissedForegroundColor}" />

</ResourceDictionary>
