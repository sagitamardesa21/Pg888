<local:HostedPage
    x:Class="Unigram.Views.Settings.SettingsPasswordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Unigram.Views"
    xmlns:controls="using:Unigram.Controls"
    xmlns:triggers="using:Unigram.Triggers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="OnLoaded"
    mc:Ignorable="d">

    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <DrillInNavigationTransitionInfo/>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <local:HostedPage.Header>
        <controls:ButtonPageHeader
            x:Name="Header"
            Text="{CustomResource TwoStepVerification}"
            Command="{x:Bind ViewModel.SendCommand}"
            CommandVisibility="Collapsed"
            Glyph="&#xE10B;"/>
    </local:HostedPage.Header>
    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Confirm">
                    <VisualState.StateTriggers>
                        <triggers:EnumTrigger Value="{x:Bind ViewModel.State, Mode=OneWay}" CompareTo="Confirm"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ConfirmPanel.Visibility" Value="Visible"/>
                        <Setter Target="Header.CommandVisibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Create">
                    <VisualState.StateTriggers>
                        <triggers:EnumTrigger Value="{x:Bind ViewModel.State, Mode=OneWay}" CompareTo="Create"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="CreatePanel.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Manage">
                    <VisualState.StateTriggers>
                        <triggers:EnumTrigger Value="{x:Bind ViewModel.State, Mode=OneWay}" CompareTo="Manage"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ManagePanel.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Input">
                    <VisualState.StateTriggers>
                        <triggers:EnumTrigger Value="{x:Bind ViewModel.State, Mode=OneWay}" CompareTo="Input"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="InputPanel.Visibility" Value="Visible"/>
                        <Setter Target="Header.CommandVisibility" Value="Visible"/>
                        <Setter Target="Header.Command" Value="{x:Bind ViewModel.Input.SendCommand}"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Recovery">
                    <VisualState.StateTriggers>
                        <triggers:EnumTrigger Value="{x:Bind ViewModel.State, Mode=OneWay}" CompareTo="Recovery"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="RecoveryPanel.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <ScrollViewer x:Name="ConfirmPanel"
                      Visibility="Collapsed"
                      VerticalScrollBarVisibility="Auto"
                      VerticalScrollMode="Auto">
            <StackPanel Style="{StaticResource SettingsGroupPanelStyle}">
                <PasswordBox Password="{x:Bind ViewModel.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             PlaceholderText="{x:Bind ViewModel.PasswordHint, Mode=OneWay}"/>
                <TextBlock>
                    <Hyperlink>
                        <Run Text="{CustomResource ForgotPassword}"/>
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </ScrollViewer>
        <ScrollViewer x:Name="CreatePanel"
                      Visibility="Collapsed"
                      VerticalScrollBarVisibility="Auto"
                      VerticalScrollMode="Auto">
            <StackPanel>
                <controls:BadgeButton
                    Command="{x:Bind ViewModel.EnableCommand}"
                    Content="{CustomResource SetAdditionalPassword}"/>

                <TextBlock
                        Text="{CustomResource SetAdditionalPasswordInfo}"
                        Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Margin="12,8,12,0"/>

            </StackPanel>
        </ScrollViewer>
        <ScrollViewer x:Name="ManagePanel"
                      Visibility="Collapsed"
                      VerticalScrollBarVisibility="Auto"
                      VerticalScrollMode="Auto">
            <StackPanel>
                <controls:BadgeButton
                    Command="{x:Bind ViewModel.EnableCommand}"
                    Content="{CustomResource ChangePassword}"/>
                <controls:BadgeButton
                    Command="{x:Bind ViewModel.DisableCommand}"
                    Content="{CustomResource TurnPasswordOff}"/>
                <controls:BadgeButton
                    Content="{CustomResource ChangeRecoveryEmail}"/>

                <TextBlock
                        Text="{CustomResource EnabledPasswordText}"
                        Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Margin="12,8,12,0"/>

            </StackPanel>
        </ScrollViewer>
        <ScrollViewer x:Name="InputPanel"
                      Visibility="Collapsed"
                      VerticalScrollBarVisibility="Auto"
                      VerticalScrollMode="Auto">
            <StackPanel>
                <PasswordBox
                    Password="{x:Bind ViewModel.Input.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    PlaceholderText="{CustomResource PleaseEnterFirstPassword}"/>
                <PasswordBox
                    Password="{x:Bind ViewModel.Input.PasswordRetype, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    PlaceholderText="{CustomResource PleaseReEnterPassword}"/>
                <TextBox
                    Text="{x:Bind ViewModel.Input.PasswordHint, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    PlaceholderText="{CustomResource PasswordHintText}"/>
                <TextBox
                    Text="{x:Bind ViewModel.Input.EmailAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    PlaceholderText="{CustomResource YourEmail}"
                    InputScope="EmailNameOrAddress"/>
                <TextBlock
                        Text="{CustomResource YourEmailInfo}"
                        Foreground="{ThemeResource SystemControlDisabledChromeDisabledLowBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Margin="12,8,12,0"/>
            </StackPanel>
        </ScrollViewer>
        <ScrollViewer x:Name="RecoveryPanel"
                      Visibility="Collapsed"
                      VerticalScrollBarVisibility="Auto"
                      VerticalScrollMode="Auto">

        </ScrollViewer>
    </Grid>
</local:HostedPage>
