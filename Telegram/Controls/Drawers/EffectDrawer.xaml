<UserControl x:Class="Telegram.Controls.Drawers.EffectDrawer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:common="using:Telegram.Common"
             xmlns:controls="using:Telegram.Controls"
             xmlns:selectors="using:Telegram.Selectors"
             xmlns:viewModels="using:Telegram.ViewModels.Drawers"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <GridView x:Name="List"
                  ItemsSource="{x:Bind ViewModel.Stickers, Mode=OneWay}"
                  common:FluidGridView.OrientationOnly="False"
                  ChoosingItemContainer="OnChoosingItemContainer"
                  ContainerContentChanging="OnContainerContentChanging"
                  IsItemClickEnabled="True"
                  SelectionMode="None"
                  ItemClick="Stickers_ItemClick"
                  Loaded="Stickers_Loaded"
                  Padding="2,0"
                  Grid.Row="1">
            <common:FluidGridView.Triggers>
                <common:FluidGridViewTrigger RowsOrColumns="5" />
            </common:FluidGridView.Triggers>
            <GridView.Header>
                <GridView ItemsSource="{x:Bind ViewModel.Reactions, Mode=OneWay}"
                          common:FluidGridView.OrientationOnly="False"
                          ChoosingItemContainer="OnChoosingItemContainer"
                          ContainerContentChanging="OnContainerContentChanging"
                          ItemClick="Stickers_ItemClick"
                          IsItemClickEnabled="True"
                          SelectionMode="None"
                          Grid.Row="1">
                    <common:FluidGridView.Triggers>
                        <common:FluidGridViewTrigger RowsOrColumns="8" />
                    </common:FluidGridView.Triggers>
                    <GridView.Header>
                        <controls:EmojiSearchBox x:Name="SearchField"
                                                 PlaceholderText="{CustomResource Search}"
                                                 TextChanged="SearchField_TextChanged"
                                                 CategorySelected="SearchField_CategorySelected"
                                                 Margin="10,8,10,0" />
                    </GridView.Header>
                    <GridView.Template>
                        <ControlTemplate TargetType="GridView">
                            <Border BorderBrush="{TemplateBinding BorderBrush}"
                                    Background="{TemplateBinding Background}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="{TemplateBinding CornerRadius}">
                                <ItemsPresenter Header="{TemplateBinding Header}"
                                                HeaderTemplate="{TemplateBinding HeaderTemplate}"
                                                HeaderTransitions="{TemplateBinding HeaderTransitions}"
                                                Footer="{TemplateBinding Footer}"
                                                FooterTemplate="{TemplateBinding FooterTemplate}"
                                                FooterTransitions="{TemplateBinding FooterTransitions}"
                                                Padding="{TemplateBinding Padding}" />
                            </Border>
                        </ControlTemplate>
                    </GridView.Template>
                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <controls:AnimatedImage x:Name="Player"
                                                        AutoPlay="False"
                                                        LimitFps="True"
                                                        FrameSize="32,32"
                                                        DecodeFrameType="Logical"
                                                        Width="32"
                                                        Height="32"
                                                        Ready="Player_Ready"
                                                        ReplacementColor="{ThemeResource TelegramForegroundAccentBrush}" />
                                <Border Background="{ThemeResource MessageServiceBackgroundBrush}"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Width="16"
                                        Height="16"
                                        CornerRadius="8">
                                    <TextBlock Text="&#xE9DD;"
                                               FontFamily="{StaticResource SymbolThemeFontFamily}"
                                               FontSize="12"
                                               Foreground="#FFFFFF"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="MinWidth"
                                    Value="0" />
                            <Setter Property="MinHeight"
                                    Value="0" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="GridViewItem">
                                        <ContentPresenter HorizontalContentAlignment="Stretch"
                                                          VerticalContentAlignment="Stretch"
                                                          Padding="0" />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GridView.ItemContainerStyle>
                    <GridView.ItemContainerTransitions>
                        <TransitionCollection />
                    </GridView.ItemContainerTransitions>
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid Orientation="Horizontal"
                                           AreStickyGroupHeadersEnabled="False" />
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                </GridView>
            </GridView.Header>
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <controls:AnimatedImage x:Name="Player"
                                                AutoPlay="False"
                                                LimitFps="True"
                                                FrameSize="64,64"
                                                DecodeFrameType="Logical"
                                                Ready="Player_Ready" />
                        <Border Background="{ThemeResource MessageServiceBackgroundBrush}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Width="16"
                                Height="16"
                                CornerRadius="8">
                            <TextBlock Text="&#xE9DD;"
                                       FontFamily="{StaticResource SymbolThemeFontFamily}"
                                       FontSize="12"
                                       Foreground="#FFFFFF"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>
                        <TextBlock TextAlignment="Right"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Bottom" />
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
            <GridView.Footer>
                <Border Height="12" />
            </GridView.Footer>
            <GridView.ItemContainerStyle>
                <Style TargetType="GridViewItem"
                       BasedOn="{StaticResource DefaultGridViewItemStyle}">
                    <Setter Property="Margin"
                            Value="0" />
                    <Setter Property="Padding"
                            Value="2" />
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch" />
                    <Setter Property="VerticalContentAlignment"
                            Value="Stretch" />
                </Style>
            </GridView.ItemContainerStyle>
            <GridView.ItemContainerTransitions>
                <TransitionCollection />
            </GridView.ItemContainerTransitions>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid Orientation="Horizontal"
                                   AreStickyGroupHeadersEnabled="False"
                                   CacheLength="2" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>
    </Grid>
</UserControl>
