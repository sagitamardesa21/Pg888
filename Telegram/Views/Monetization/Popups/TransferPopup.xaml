<controls:ContentPopup x:Class="Telegram.Views.Monetization.Popups.TransferPopup"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:controls="using:Telegram.Controls"
                       mc:Ignorable="d"
                       Title="Telegram"
                       PrimaryButtonText="OK"
                       SecondaryButtonText="Cancel"
                       PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
                       SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <StackPanel>
        <TextBlock Text="{CustomResource MonetizationTransferMessage1}"
                   Style="{StaticResource BodyTextBlockStyle}" />

        <Button x:Name="Address"
                FontFamily="Consolas"
                HorizontalAlignment="Stretch"
                Margin="0,8" />

        <TextBlock Text="{CustomResource MonetizationTransferMessage2}"
                   Style="{StaticResource BodyTextBlockStyle}" />
    </StackPanel>
</controls:ContentPopup>
